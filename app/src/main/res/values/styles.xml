<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!-- Used for the Drawer Layout -->
    <style name="AppThemeTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>




    <style name="AppTheme.Detail" parent="AppTheme">
        <item name="android:windowEnterTransition">@transition/custom_slide_end</item>
        <item name="android:windowReturnTransition">@transition/custom_slide_end</item>
    </style>








    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
    

    <style name="RoundET">
        <item name="android:paddingStart">@dimen/round_et_margin_vertical</item>
        <item name="android:paddingEnd">@dimen/round_et_margin_vertical</item>
        <item name="android:paddingBottom">@dimen/round_et_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/round_et_margin_horizontal</item>
    </style>


    <style name="LoginET" parent="@android:style/TextAppearance">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="TaskButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_task_button</item>
    </style>


    <style name="PrimaryColorItem">
        <item name="colorControlNormal">@color/colorPrimaryTransparent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

</resources>
